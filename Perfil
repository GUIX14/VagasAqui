import java.util.Scanner;

public class Perfil {
	//isntanciar
	Scanner ler = new Scanner(System.in);
	Cadastro c = new Cadastro();
	Assinatura a = new Assinatura();
	
	//atributos
	
	
	//processamento
	public void Opcao() {
		int escolhaPerfil = 0;
		System.out.println("O que deseja fazer?\n"
				+ "1.Editar perfil\n"
				+ "2.Editar assinatura\n"
				+ "3.voltar\n");
		 escolhaPerfil = ler.nextInt();
		switch(escolhaPerfil){
			case 1:
				c.EditarCadastro();// editação de cadastro na classe cadastro
				break;
			case 2:
				System.out.println("Deseja fazer assinatura 'a'\n"
						+ "cancelar assinatura 'c'");
				String ass = ler.next();
				switch(ass) {
				case "a":
					a.Fazerassinatura();
					break;
				case "c":
					a.Cancelarassinatura();
				}
				break;
			case 3:
				System.out.println("Voltando");
				c.Voltar();
				break;
				default:
					System.out.println("Você digitou caracteres incorretos");
					c.Voltar();
		}
		
		
			
	
		
	}

}
